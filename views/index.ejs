<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white">
    <div class="container mx-auto p-8">
        <h1 class="text-4xl font-extrabold text-center mb-6 text-blue-400">URL Shortener</h1>
        <form action="/shorten" method="POST" class="max-w-lg mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
            <label for="url" class="block text-lg font-medium mb-2 text-gray-300">Enter URL to shorten:</label>
            <input type="text" id="url" name="url" class="w-full p-3 border border-gray-700 bg-gray-700 text-gray-300 rounded-lg mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            <button type="submit" class="w-full py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-400">
                Shorten URL
            </button>
        </form>

        <h2 class="text-2xl font-semibold mt-12 text-gray-300">Your Past Shortened Links</h2>
        <ul class="mt-4">
            <% redirects.forEach(redirect => { %>
                <li class="mb-4 p-4 bg-gray-800 rounded-lg shadow-md">
                    <a href="/<%= redirect.short_url %>" class="text-blue-400 hover:underline">
                        /<%= redirect.short_url %>
                    </a> - 
                    <span class="text-gray-400"><%= redirect.long_url %></span>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
